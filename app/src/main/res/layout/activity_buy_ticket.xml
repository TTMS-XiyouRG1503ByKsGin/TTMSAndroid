<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wtl.ttms_hdd.BuyTicket.view.BuyTicketActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <ImageView
            android:id="@+id/buyback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/buyback"
            android:layout_gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上映影院和购票"
            android:textSize="22sp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:padding="5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3c3c3c"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ticket_img"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/film_details"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ticket_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/buy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超时空同居"
                android:textColor="#fff"
                android:textSize="22sp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/buy_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.9"
                android:textColor="#ffc16f"
                android:textSize="21sp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/buy_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="戏剧,爱情,恐怖,非主流"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/buy_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="斯蒂芬乔布斯拖拉机"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/buy_actors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李佳伟 苍井空"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/go_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@mipmap/down"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/this_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticket_img"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="kalshfkjashdkfhkalsdhfjlkashdlkfhaklsdjhfklhaskdhfklashdjkfhlkashdfkjhakshdfklhaslkdhfjashdkfjhaskdfjds"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ticket_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/this_details"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buyticketground"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="评分"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>
